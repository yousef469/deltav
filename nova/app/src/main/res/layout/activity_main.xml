<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_bg"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLanguage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="#33FFFFFF"
        android:text="EN"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="NOVA DASHBOARD"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- SCROLL CONTAINER -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toTopOf="@id/manualInputOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="48dp">

            <!-- 1. TOP EMERGENCY SECTION -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEmergencyTop"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#CCFF0000"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="ðŸš¨" 
                        android:textSize="32sp" 
                        android:layout_marginEnd="16dp"/>
                    <TextView 
                        android:id="@+id/textEmergencyTitle"
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="EMERGENCY / SOS" 
                        android:textColor="#FFFFFF" 
                        android:textSize="24sp" 
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 2. AI CARD -->
            <!-- 2. AI CARD -->
            <androidx.cardview.widget.CardView
                android:id="@+id/aiCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#22FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voice Assistant Ready"
                        android:textColor="#BBBBBB"
                        android:textSize="14sp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/responseText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How can I assist you today?"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </ScrollView>

                    <Button
                        android:id="@+id/btnHome"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="end"
                        android:background="#11FFFFFF"
                        android:text="ðŸ”™ DASHBOARD"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- 3. MAIN GRID -->
            <GridLayout
                android:id="@+id/mainDashboardGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:columnCount="2"
                android:visibility="visible">

                <!-- FARMING -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFarming"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#1AFFFFFF"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŒ¾" android:textSize="32sp" />
                        <TextView android:id="@+id/textFarming" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="FARMING" android:textColor="#FFFFFF" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- REPAIRING (Previously Mechanic) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardManualRepair"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#1AFFFFFF"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="âš™ï¸" android:textSize="32sp" />
                        <TextView android:id="@+id/textRepairing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="REPAIRING" android:textColor="#FFFFFF" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- MEDICAL -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMedical"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#1AFFFFFF"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸš‘" android:textSize="32sp" />
                        <TextView android:id="@+id/textMedical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MEDICAL" android:textColor="#FFFFFF" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- EDUCATION (MATH/PHYSICS) [NEW] -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEducation"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#339C27B0"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“š" android:textSize="32sp" />
                        <TextView android:id="@+id/textEducation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="EDUCATION" android:textColor="#FFFFFF" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CODING (JAVA/PYTHON) [NEW] -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCoding"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#3300BCD4"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ’»" android:textSize="32sp" />
                        <TextView android:id="@+id/textCoding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CODING" android:textColor="#FFFFFF" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- GAMES (CHESS) [NEW] -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGame"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#33FFEB3B"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â™Ÿï¸" android:textSize="32sp" />
                        <TextView android:id="@+id/textChess" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CHESS" android:textColor="#FFFFFF" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- NAVIGATOR -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNavigator"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#332196F3"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ—ºï¸" android:textSize="32sp" />
                        <TextView android:id="@+id/textNavigator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NAVIGATOR" android:textColor="#FFFFFF" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- TOOLS -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTools"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#33FF9800"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ”¦" android:textSize="32sp" />
                        <TextView android:id="@+id/textTools" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TOOLS" android:textColor="#FFFFFF" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- DISCLAIMER -->
            <TextView
                android:id="@+id/textDisclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Nova provides guidance, not professional medical advice.\nIn emergencies, contact local authorities when possible."
                android:textColor="#CCFFFFFF"
                android:textSize="10sp"
                android:textAlignment="center"
                android:alpha="0.6"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- DECISION TREE OVERLAY -->
    <LinearLayout
        android:id="@+id/decisionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DD000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:id="@+id/decisionQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="Is the bleeding soaking through clothes?"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNo"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#555555"
                android:text="NO"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnYes"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#FF3333"
                android:text="YES"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
        
        <Button
            android:id="@+id/btnDecisionReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Restart Flow"
            android:textSize="14sp"
            android:backgroundTint="#33FFFFFF"/>
    </LinearLayout>

    <!-- EMERGENCY DASHBOARD (Big Buttons) -->
    <LinearLayout
        android:id="@+id/emergencyDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF111111"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš¨ EMERGENCY"
            android:textColor="#FF5555"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnEmBleeding"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#99FF3333"
            android:text="ðŸ©¸ BLEEDING"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEmUnconscious"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#993333FF"
            android:text="ðŸ’¤ UNCONSCIOUS"
            android:textSize="20sp"
            android:textStyle="bold" />
            
        <Button
            android:id="@+id/btnEmHeat"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#99FF9900"
            android:text="â˜€ï¸ HEAT STROKE"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEmLost"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#99999999"
            android:text="ðŸŒ² LOST / DIRECTION"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEmSentinel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#990000FF"
            android:text="ðŸ“¡ SIGNAL WAKE-UP"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEmBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â—€ CANCEL"
            android:textColor="#AAAAAA"
            android:backgroundTint="#33FFFFFF"/>
    </LinearLayout>

    <!-- TOOLS DASHBOARD -->
    <LinearLayout
        android:id="@+id/toolsDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF222222"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ› ï¸ ACTION TOOLS"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnToolBeacon"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#ff9800"
            android:text="ðŸ”Š SOUND BEACON (OFF)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnToolLock"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00bcd4"
            android:text="ðŸ§­ LOCK DIRECTION"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textLockGuidance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Lock heading to get return guidance."
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnToolWater"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#2196f3"
            android:text="ðŸ’§ WATER TIMER (OFF)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnToolBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â—€ BACK"
            android:textColor="#AAAAAA"
            android:backgroundTint="#33FFFFFF"/>
    </LinearLayout>

    <!-- COMPASS OVERLAY (Hidden by default) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/compassOverlay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ptt_button_bg"
        android:alpha="0.9"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toTopOf="@id/pttButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/compassNeedle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="?android:attr/fingerprintAuthDrawable" 
            android:tint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/compassDirText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/compassDirText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="N"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MANUAL INPUT SECTION -->
    <LinearLayout
        android:id="@+id/manualInputOverlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/ptt_button_bg"
        android:alpha="0.8"
        app:layout_constraintBottom_toTopOf="@id/pttButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editManualInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Type survival query..."
            android:textColor="#FFFFFF"
            android:textColorHint="#88FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSendText"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:background="#22FFFFFF"
            android:text="âž¡ï¸"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/pttButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ptt_button_bg"
        android:text="ðŸŽ™ï¸"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
